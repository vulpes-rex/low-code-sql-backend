# App Database Configuration
APP_DATABASE_TYPE=mongodb  # Options: mongodb, postgres, mysql

# MongoDB Configuration (if APP_DATABASE_TYPE=mongodb)
APP_MONGODB_URI=mongodb://localhost:27017/low-code-sql

# PostgreSQL/MySQL Configuration (if APP_DATABASE_TYPE=postgres or mysql)
APP_DB_HOST=localhost
APP_DB_PORT=5432  # 5432 for PostgreSQL, 3306 for MySQL
APP_DB_USERNAME=postgres
APP_DB_PASSWORD=postgres
APP_DB_DATABASE=low-code-sql

# JWT Configuration
JWT_SECRET=your-secret-key
JWT_EXPIRATION=1d

# Server Configuration
PORT=3000
NODE_ENV=development